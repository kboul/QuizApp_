<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.quizapp_.MainActivity">

    <LinearLayout style="@style/welcomeScreenLinearLayout">

        <TextView
            android:id="@+id/textView"
            style="@style/welcomeScreenMessage" />

        <ImageView style="@style/welcomeScreenImage" />

        <EditText
            android:id="@+id/type_name"
            style="@style/welcomeScreenEditText" />

        <Button
            android:id="@+id/start"
            style="@style/startButton" />

    </LinearLayout>

</ScrollView>

